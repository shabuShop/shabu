
<%- include('../includes/header'); %>



<div class="container-fluid "  >
    <div class="d-flex pt-4 justify-content-center">
        <h3>ข้อมูลพนักงาน </h3>
    </div>
    <div class="d-flex pt-4 justify-content-end">
        <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
            เพิ่มพนักงาน
        </a>    
    </div>

    <div class="collapse mt-3" id="collapseExample">
        <div class="card card-body">
            Some placeholder content for the collapse component. This panel is hidden by default but revealed when the user activates the relevant trigger.
        </div>
    </div>
    
    <div class="card p-3 mt-2">
        <table id="employee" class="display table " >
            <thead>
                <tr>
                    <th>ID</th>
                    <th>ชื่อ</th>
                    <th>นามสกุล</th>
                    <th>อีเมล</th>
                    <th>เบอร์</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>ต่ำเเหน่ง</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% for(let i of data_employee){%>
                    <tr>
                        <td><%= i.ID%></td>
                        <td><%= i.Emp_Fname%></td>
                        <td><%= i.Emp_Lname%></td>
                        <td><%= i.Emp_Address%></td>
                        <td><%= i.Emp_Tel%></td>
                        <td><%= i.Emp_Username%></td>
                        <td><%= i.Emp_Password%></td>
                        <td><%= i.Position_Name%></td>
                        <td>
                            <p class="btn btn-warning p-1 px-2" >แก้</p>
                            <p class="btn btn-danger p-1 px-2" >ลบ</p>
                        </td>
                        
                    </tr>
                <%} %> 
                
                

            </tbody>
        </table>
    </div>
</div>


