
<div class="container-fluid">

    
    <div class="d-flex pt-2 justify-content-center">
        <h3>ข้อมูลพนักงาน</h3>
        
    </div>
    <div class="d-flex  justify-content-start mb-1">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modal-lg">
            เพิ่มพนักงาน
        </button>
    </div>

    
    
    <div class="modal fade" id="modal-lg">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header bg-purple">
              <h4 class="modal-title ">ใส่ข้อมูลพนักงาน</h4>
              <button type="button " class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true" class="text-light">&times;</span>
              </button>
            </div>
            <form action="" method="post">
                <div class="modal-body">
                <!-- ============================== Form ==============================-->
                    <blockquote id="alert" class="quote-danger d-none">
                        <h3>! กรุณาใส่ข้อมูลให้ครบ</h3>
                    </blockquote>

                    <div class="form-group">
                        <label >ชื่อ</label>
                        <input type="text" class="form-control" name="Fname">
                    </div>
                    <div class="form-group">
                        <label >นามสกุล</label>
                        <input type="text" class="form-control" name="Lname">
                    </div>
                    <div class="form-group">
                        <label >ที่อยู่</label>
                        <input type="text" class="form-control" name="address">
                    </div>
                    <div class="form-group">
                        <label >เบอร์โทร</label>
                        <input type="text" class="form-control" name="tel">
                    </div>
                    <!-- <div class="form-group">
                        <label >Username</label>
                        <input type="text" class="form-control" name="username">
                    </div> -->
                    <div class="form-group">
                        <label >Password</label>
                        <input type="password" class="form-control" name="password" >
                    </div>

                </div>

                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" onclick="return vali()">Save changes</button>
                </div>

            </form>

          </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card card-body">
                
                <table id="employee" class="table table-bordered table-hover " >
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>ชื่อ</th>
                            <th>นามสกุล</th>
                            <th>ที่อยู่</th>
                            <th>เบอร์</th>
                            <th>Username</th>
                            <th>Password</th>
                            <th>ต่ำเเหน่ง</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i of data_employee){%>
                            <tr>
                                <td><%= i.ID%></td>
                                <td><%= i.Emp_Fname%></td>
                                <td><%= i.Emp_Lname%></td>
                                <td><%= i.Emp_Address%></td>
                                <td><%= i.Emp_Tel%></td>
                                <td><%= i.Emp_Username%></td>
                                <td><%= i.Emp_Password%></td>
                                <td><%= i.Position_Name%></td>
                                <td>
                                    <p class="btn btn-warning p-1 " >แก้</p>
                                    <p class="btn btn-danger p-1 " >ลบ</p>
                                </td>
                                
                            </tr>
                        <%} %> 
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>




<script>
    $(function () {
      $('#employee').DataTable({
        "paging": true,
        "lengthMenu": [[5, 10, 20], [5, 10, 20]],
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
      });
      
    });

    function vali(){
        // (document.querySelector("input[name=Fname]").innerText).trim()
        
        let Fname = ($("input[name=Fname]").val()).trim() === "";
        let Lname = ($("input[name=Lname]").val()).trim() === "";
        let address = ($("input[name=address]").val()).trim() === "";
        let tel = ($("input[name=tel]").val()).trim() === "";
        let password = ($("input[name=password]").val()).trim() === "";

        if( !Fname && !Lname && !address && !tel && !password ){
            console.log("yes");
        }else{

            $("#alert").removeClass("d-none")

        }
        return false;
    }
  
</script>