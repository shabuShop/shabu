

<% if(status_sale === 1 ||status_sale != 0){%> 

        
        <div class="row">
            <div class="col-1"></div>
            <div id="alert" class="alert alert-danger col-10">
                <h3 class="text-center">! กรุณาปิดการขายก่อนทำการตัดสต๊อก</h3>
            </div >
            <div class="col-1"></div>
        </div>

        <div class="container-fluid">
            <div class="d-flex  justify-content-start mb-1">
                <a href="/admin/stock_summary" class="btn btn-info "  >
                    สรุปการตัดสต๊อก
                </a>
            </div>
        </div>


<% }else if(status_sale === 0){%> 


    <div class="container-fluid">

        <div class="d-flex pt-2 justify-content-center ">
            <h3 class="mt-1">สต๊อกของ : วันที่ <%= date_time %> </h3>
        </div>
    
        <div class="d-flex  justify-content-start mb-1">
            <a href="/admin/stock_summary" class="btn btn-info "  >
                สรุปการตัดสต๊อก
            </a>
        
        </div>
    
        <div class="row">
            <div class="col-12">
                <div class="card card-body">
                    <table id="employee" class="table table-bordered table-hover " >
                        <thead>
                            <tr>
                                <th>รหัส</th>
                                <th>ชื่อ</th>
                                <th>รับเข้า</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i of type_material){%>
                                <tr>
                                    <td><%= i.ID%></td>
                                    <td><%= i.St_Name%></td>
                                    <td>
                                        <% if( done_stock.indexOf(i.ID) >= 0 ){ %>
    
                                            <p class="badge bg-success p-2 " style="font-weight: normal;font-size: medium;">
                                                ตัดสต๊อกเรียบร้อยเเล้ว
                                        </p>   
    
                                        <% }else{ %>
    
                                            <p class="btn btn-primary p-1 px-1 mr-1" onclick="detail('<%=i.ID%>','<%=i.St_Name%>')">
                                                ตัดสต๊อก
                                        </p>  
                                            
                                        <% } %> 
    
                                        
                                    </td>
                                </tr>
                            <%} %> 
    
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    
    
    </div>
    
    <!-- =================== page Detail =================== -->
    <form id="detail" action="stock_detail" method="get" class="d-inline">
        <input type="number" name="id_detail" class="d-none" value="">
        <input type="text" name="material_detail" class="d-none" value="">
    </form>
    
    
    <script>
        $(function () {
          $('#employee').DataTable({
            "paging": true,
            "lengthMenu": [[5, 10, 20], [5, 10, 20]],
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
          });
          
        });
    
        function detail(id,name){
            $("input[name=id_detail]").val(parseInt(id))
            $("input[name=material_detail]").val(name)
            $("#detail").submit();
        }
    </script>



<% } %> 

